@using System.Net.Http;
@using System.Net.Http.Json;
@using System.Threading.Tasks;
@using System.Text.Json
@using BlazorApp2.Data
@inject StateContainer StateContainer

<div class="thess_card">
    <h4>Current Weather in  Thessaloniki,Greece </h4> <img src="thess.png" alt="Italian Trulli" class="imgthess">


    @if (currWeatherThess == null)
    {
        <p><em>Loading...</em></p>
    }
    else 
    {
        <div class="results_thess">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><img src="humidity.png" alt="Italian Trulli">Humidity</h5>
                            <p class="card-text">@currWeatherThess.main.humidity%</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><img src="temperature.png" >Temperature</h5>
                            <p class="card-text">@StateContainer.FormatTemperature(currWeatherThess.main.temp) °@StateContainer.TempUnit</p>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-12 col-lg-6 col-xl-4    ">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><img src="man.png" alt="Italian Trulli">Feels Like</h5>
                            <p class="card-text">@StateContainer.FormatTemperature(currWeatherThess.main.feels_like) °@StateContainer.TempUnit  </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 col-xl-4 ">
                    <div class="card" id="conditionscard">
                        <div class="card-body" id="conditionscardbody">
                            <h5 class="card-title" id="cardtitleconditions"><img src="telescope.png" style="width:40px; height:40px;">Conditions</h5>
                            <p class="card-text"><img src="@url" style="width:91px; height:91px;"  />  </p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 col-xl-4 ">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><img src="wind.png" alt="Italian Trulli">Wind Speed</h5>
                            <p class="card-text">@currWeatherThess.wind.speed km/h</p>
                        </div>
                    </div>
                </div>

            </div>


            
        </div>
       

    }
</div>




 






